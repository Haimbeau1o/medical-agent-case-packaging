{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Ledger Row",
  "type": "object",
  "required": [
    "claim_id",
    "claim_text",
    "metric_value",
    "metric_scope",
    "dataset_or_source",
    "calculation_method",
    "source_file_path",
    "owner",
    "interview_safe_answer",
    "risk_note"
  ],
  "properties": {
    "claim_id": {"type": "string", "pattern": "^C[0-9]{3}$"},
    "claim_text": {"type": "string", "minLength": 5},
    "metric_value": {"type": "string", "minLength": 1},
    "metric_scope": {
      "type": "string",
      "enum": ["offline_replay", "stress_test", "online_observe"]
    },
    "dataset_or_source": {"type": "string", "minLength": 1},
    "calculation_method": {"type": "string", "minLength": 1},
    "source_file_path": {"type": "string", "minLength": 1},
    "owner": {"type": "string", "minLength": 1},
    "interview_safe_answer": {"type": "string", "minLength": 10},
    "risk_note": {"type": "string", "minLength": 3}
  },
  "additionalProperties": false
}
